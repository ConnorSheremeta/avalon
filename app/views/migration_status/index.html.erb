<ol class="breadcrumb">
  <li class="active">Migration Report</li>
</ol>
<table class="table table-striped table-hover table-condensed">
  <tr>
    <th class="nowrap">Class&nbsp;Name</th>
    <th class="nowrap">Suceeded</th>
    <th class="nowrap">Failed</th>
    <th class="nowrap">Total</th>
  </tr>
  <% @migration_classes.each do |klass| %>
    <tr>
      <td><%= link_to klass, admin_migration_report_by_class_path(class: klass) %></td>
      <td><%= link_to @counts[[klass, true]].to_i, admin_migration_report_by_class_path(class: klass, status: true) %></td>
      <td><%= link_to @counts[[klass, false]].to_i, admin_migration_report_by_class_path(class: klass, status: false) %></td>
      <td><%= link_to @counts[[klass, true]].to_i + @counts[[klass, false]].to_i, admin_migration_report_by_class_path(class: klass) %></td>
    </td>
  <% end %>
</table>
