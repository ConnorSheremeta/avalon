<% if flash[:error] %><div class='alert alert-error'><%= flash[:error] %></div><% end %>

<%= form_for @mediaobject, html: { class: 'form-vertical', id: 'basic_metadata_form' } do |media| %>
  <%= hidden_field_tag :step, @active_step %>
  <%= render_metadata_input :title, :text_field, required: true do |f| %>
    <%# The label block is optional. If omitted it will default to a humanized version of the
        symbol %>
    <% content_for :label do %>
      <a href="http://wiki.dlib.indiana.edu" target="_help" data-tooltip="#title_tooltip">Title *</a>
    <% end %>
    <%# This optional section inserts a tooltip %>
    <% content_for :tooltip do %>
      <div id="title_tooltip" class="collapse form-tooltip span8">
        <p>Title for the resource</p>
        <p>'Ulysses', 'Gone With the Wind', 'Chucky Lou'</p>
      </div>
    <% end %>
    <%# Anything else goes into the controls <div> using the attribute name and input type
        provided to the helper method. %>
  <% end %> 

