    <div class="row-fluid whitespace">
      <div class="span12">
      <% unless @mediaobject.title.empty? %>
        <h2><%= @mediaobject.title.first %></h2>
      <% else %>
        <h2><%= @mediaobject.pid %></h2>
      <% end %>
     </div>
    </div>
    
    <div class="row-fluid whitespace">
      <section id="player">
        <% unless @master_file.nil? %>
          <%= render "modules/video_player",
            locals: {stream: @master_file.stream,
                     mimetype: 'video/x-flv',
                     mediapackaged_id: @master_file.mediapackage_id} %>
        <% else %>
          <div class="well">
            <p>No media is associated with this item</p>
          </div>
        <% end %>
      </section>  
    </div>
    <div class="row-fluid whitespace">
      <section id="metadata"><%= render "modules/metadata_display" %></section>
    </div>

  <div class="row-fluid">
    <div class="span8">
      <%= link_to "Back to access control", edit_media_object_path(@mediaobject, step: 'access_control'), class: "btn" %>
      <%= link_to "Publish this item", media_object_path(@mediaobject), class: "btn" %>
    </div>
  </div>
</div>
  
