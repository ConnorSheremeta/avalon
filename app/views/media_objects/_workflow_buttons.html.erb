<%= submit_tag 'Save', class: "btn btn-success" %>

<%= hidden_field_tag :step, @active_step %>
<% if HYDRANT_STEPS.last?(@active_step) %>
    <%= submit_tag 'Save & Continue to Review', class: 'btn btn-primary' %>
<% else %>
  <%= form.submit "Save & Continue to #{HYDRANT_STEPS.next(@active_step).title}" %>
<% end %>
