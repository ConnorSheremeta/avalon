<br/>
<!-- Nav tabs -->
<ul id="myTab" class="nav nav-tabs">
  <li><a href="#home" data-toggle="tab">Share</a></li>
  <li><a href="#profile" data-toggle="tab">Embed</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="home">
    <label class="muted">This video</label>
    <input type="text" class="span5" value="<%= media_object_url(@mediaobject.pid) %>" onClick="this.select();">
    <label class="muted">This item</label>
    <input type="text" class="span5"  value="<%= master_file_url(@currentStream.pid) %>" onClick="this.select();">
  </div>
  <div class="tab-pane" id="profile">
    <textarea class="span6" rows="3" onClick="this.select();"> 
      <iframe src="//player.vimeo.com/video/81413290" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </textarea>
  </div>
</div>

<script>
  $(document).ready(
    $('#myTab a').click(function (e) {
      e.preventDefault();
      $(this).tab('show');
    })
    $('#myTab a:first').tab('show');
  )
</script>
