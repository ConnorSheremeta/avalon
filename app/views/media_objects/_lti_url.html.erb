<% if section=='tab-content' %>

    <div class="tab-pane" id="lti-tab">
      <p class="muted"><%= t('share.lti.copy_link') %></p>
      <form role="form">
        <div class="form-group">
          <label for="ltilink-object"><%= t('share.item') %></label>
          <input type="text" class="col-md-5 form-control" id="ltilink-object" value="<%= user_omniauth_callback_url(action: 'lti', target_id: @mediaobject) %>" onClick="this.select();" readonly="readonly">
        </div>
        <div class="form-group">
          <label for="ltilink-section"><%= t('share.section') %></label>
          <% if @currentStream.present? %>
          <input type="text" class="col-md-5 form-control" id="ltilink-section" value="<%= user_omniauth_callback_url(action: 'lti', target_id: @currentStream) %>" onClick="this.select();" readonly="readonly">
          <% else %>
          <p class="muted"> <%= I18n.t('media_object.empty_share_section_permalink_notice') %> </p>
          <% end %>
        </div>
      </form>
    </div>

<% elsif section=='share-tabs' %>

    <li><a href="#lti-tab" data-toggle="tab"><%= t('share.lti.tab') %></a></li>

<% end %>
