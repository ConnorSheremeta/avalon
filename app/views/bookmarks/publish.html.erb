<% @candidates = get_user_collections %>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h1><%= t('blacklight.move.form.title') %></h1>
</div>

<%= form_tag url_for(:controller => "bookmarks", :action => "move"), :id => 'move_form', :class => "form-horizontal", :method => :post do %>
  <div class="modal-body">
    <div class="row-fluid">
      <div class="btn-options">
	<% if  @candidates.count == 0 || @documents.empty? %>
	  <div class="alert alert-danger">
	    <% if @documents.empty? %>
              <p>No items were selected.</p>
	    <% else %>
              <p>You do not have sufficient rights to any other collections to reassign selected items.</p>
	    <% end %>
	  </div>
	<% else %>
          <div class="alert">
	    <fieldset>
	      <legend>Assign Selected Items to Collection</legend>
	      <p>
		Please select a new collection for selected items.
	      </p>
	      <%= select_tag :target_collection_id, options_from_collection_for_select(@candidates, "pid", "name") %>
	    </fieldset>
          </div>
	  <div class="modal-footer">
	    <button type="submit" class="btn btn-primary">Move</button>
	  </div>
	<% end %>
      </div>
    </div>
  </div>
<% end %>
