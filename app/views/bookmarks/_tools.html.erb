    <%= link_to t('blacklight.tools.unpublish'), bulk_publish_media_objects_path(:method => :get, :id => @response.documents.map {|doc| doc.id}, :status => 'unpublish'), :name => 'publish', :class => 'btn btn-default publishlink' %>
  </li>
  <%# end %>
  <%# if can? :delete, @response.documents.map {|doc| doc.id} %>
