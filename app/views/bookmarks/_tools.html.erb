    <%= link_to t('blacklight.tools.publish'), bulk_publish_media_objects_path(:method => :get, :id => @response.documents.map {|doc| doc.id}, :status => 'publish'), :name => 'publish', :class => 'btn btn-default publishLink' %>
  </li>
  <%# end %>
  <%# if can? :unpublish, @response.documents.map {|doc| doc.id} %>
