%>
  <style>
    body {
      background: rgba(10,10,10,0.95); 
      font-family: Arial,Helvetica,sans-serif;
      font-size: 14px;
      text-align: center;
      color: white
    }
    .centered {
      margin: auto;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      height: 50px;
      width: 50%
    }
  </style>

  <div>
    <div class="centered">
      <% if current_user %>
        <p>You are not authorized to view this item</p>
      <% else %>
        <p>You must be logged in and authorized to view this item</p>
        Please <%= link_to "sign in", new_user_session_path, :onclick=>"openPopup(this);return false;" %>
      <% end %>
    </div>
  </div>

<% content_for :page_scripts do %>
  <script>
    function openPopup(thiz) {
      var popup_window = window.open(thiz.href,'Avalon Login', 'height=600, width=600');
      document.cookie = 'login_popup=1; path=/';
      var interval = window.setInterval((function() {
        if (popup_window.closed) {
          window.clearInterval(interval);
          location.reload();
        }
      }), 1000);
    }
  </script>
<% end %>


