<dl class="result dl-horizontal dl-invert">
    <% if can?(:read, document) then %>
      <%# Not very DRY but a more predictable experience %>
      <% unless image_for(document[:id]).nil? %>
        <%= link_to(media_object_path(document[:id]), {class: 'pull-left'}) do
              image_tag image_for(document[:id])
            end %>
      <% else %>
        <%= image_tag 'no_icon.png' %>
      <% end %> 
      <% else %>
        <%= image_tag image_for(document[:id]), class: 'result-thumbnail pull-left' %>
    <% end %>

  <% index_fields.each do |solr_fname, field| -%>
    <% if should_render_index_field? document, field %>
            <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_index_field_label :field => solr_fname %></dt>
            <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_index_field_value :document => document, :field => solr_fname %></dd>
    <% end -%>
  <% end -%>
</dl>
