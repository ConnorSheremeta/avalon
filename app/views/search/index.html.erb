<section id="facets">
  <div class="row-fluid">
    <div class="span2">
      <h3>Facet 1</h3>
      <ul class="unstyled">
        <li>One (13)</li>
        <li>Two (12)</li>
        <li>Three (9)</li>
        <li>Four (3)</li>
        <li>See more</li>
      </ul>
    </div>

    <div class="span2">
      <h3>Facet 2</h3>
      <ul class="unstyled">
        <li>Video (14)</li>
        <li>Audio (4)</li>
      </ul>
    </div>
  </div>
</section>

<section id="search_results">
  <div class="row-fluid"><%= render 'modules/global_search' %></div>
  <div class="row-fluid">
      <% unless @results.empty? %>
      <ul class="thumbnails">
        <%= render partial: 'search_result', collection: @results, as: :item %>      
      </ul>
      <% else %>
        <h3>No results were found. Try a different search term.</h3>
      <% end %>
  </div>
</section>

