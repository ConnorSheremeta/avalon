<% can_update = can?( :update_access_control, object) %>
<%= bootstrap_form_for object, html: { class: "form-horizontal", id: 'access_control_form'}  do |vid| %>
  <%= hidden_field_tag :step, @active_step %>

  <fieldset class='item-discovery'>
    <legend>Item discovery</legend>
    <% if can_update %>
      <%= label_tag :hidden do %>
        <%= check_box_tag :hidden, '1', (hidden) %>
        Hide this item from search results 
      <% end %>
    <% else %>
      <%= hidden ? "Item is hidden from search results" : 
        "Item is not hidden from search results" %>
    <% end %>
  </fieldset>
    
  <fieldset class='item-access'>
    <legend>Item access</legend>
    <% if can_update %>
      <%= vid.hidden_field :pid %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'public', (@visibility == 'public') %>
        Available to the general public
      <% end %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'restricted', (@visibility == 'restricted') %>
        Logged in users only
      <% end %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'private', (@visibility == 'private') %>
        Collection staff only
      <% end %>
    <% else %>
      Item is viewable by
      <%= case @visibility
          when "public"
            "the general public"
          when "restricted"
            "logged in users only"
          when "private"
            "collection staff only"
          end %>
    <% end %>
  </fieldset> 
<% end #form_for %>		

  <fieldset class='special-access'>
    <legend>Assign special access</legend>
    <div class="row-no-margin">
      <%= render "modules/access_object", object: object,
        access_object: "user", members: @users, autocomplete_model: 'user',
        input_disabled: !can_update %>
      <%= render "modules/access_object", object: object,
        access_object: "group", members: @groups, 
        dropdown_values: [@addable_groups, 'name', 'name'],
        input_disabled: !can_update %>
      <%= render "modules/access_object", object: object,
        access_object: "class", members: @virtual_groups, 
        autocomplete_model: 'externalGroup', display_helper: :vgroup_display,
        input_disabled: !can_update %>
    </div>
  </fieldset>
<% content_for :page_scripts do %>
  <script>
    $( "#access_control_form #hidden" ).on('change', function() {
        $( "#access_control_button_form #hidden" ).prop('checked',this.checked);
    });  
    $( "#access_control_form #visibility_public" ).on('change', function() {
        $( "#access_control_button_form #visibility_public" ).prop('checked', this.checked);
    });  
    $( "#access_control_form #visibility_restricted" ).on('change', function() {
        $( "#access_control_button_form #visibility_restricted" ).prop('checked', this.checked);
    });  
    $( "#access_control_form #visibility_private" ).on('change', function() {
        $( "#access_control_button_form #visibility_private" ).prop('checked', this.checked);
    });  
  </script>
<% end %>
