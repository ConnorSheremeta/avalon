%>
  <%= form.fieldset 'Item discovery' do %>
    <% if can? :update_access_control, object %>
      <%= label_tag :hidden do %>
        <%= check_box_tag 'hidden', '1', hidden %>
        Hide this item from search results 
      <% end %>
    <% else %>
      <%= hidden ? "Item is hidden from search results" : "Item is not hidden from search results" %>
    <% end %>
  <% end %>
    
  <%= form.fieldset 'Item access' do %>
    <% if can? :update_access_control, object %>
      <%= form.hidden_field :pid %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'public', (@visibility == 'public') %>
        Available to the general public
      <% end %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'restricted', (@visibility == 'restricted') %>
        Logged in users only
      <% end %>

      <%= label_tag :visibility do %>
      <%= radio_button_tag :visibility, 'private', (@visibility == 'private') %>
        Collection staff only
      <% end %>
    
      <div class="limit-access"> 
        <div id="users">
          <%= text_field_tag "new_user" %>
          <%= submit_tag "Add User" %>

          <table class="table table-striped table-hover">
            <% unless @users.empty? %>
            <thead>
              <th class="info">User name</th>
              <th/>
            </thead>
            <tbody
              <% @users.each do |user| %>
              <tr>
                <td>
                  <%= label_tag do %>
                    <%= user %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "×", 
                              polymorphic_path(object, delete_user: user, step: @active_step, donot_advance: true),
                              method: :put, class: "close" %>
                </td>
              </tr>
              <% end %>
            </tbody>
            <% end %>
          </table> 
        </div>

        <div id="groups">
          <%= select_tag "new_group", options_from_collection_for_select(@addable_groups, "name", "name") %>
          <%= submit_tag "Add Group" %>
      
          <table class="table table-striped table-hover">
            <% unless @groups.empty? %>
              <thead>
                <th>Group name</th>
                <th/> 
              </thead>
              <tbody>
                <% @groups.each do |group| %>
                  <tr>
                    <td>
                      <%= label_tag do %>
                        <%= link_to group, edit_admin_group_path(group) %>
                      <% end %>
                    </td>
                    <td>
                       <%= link_to "×", 
                                   polymorphic_path(object, delete_group: group, step: @active_step, donot_advance: true),
                                   method: :put, class: "close" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>

        <div id="classes">
          <%= text_field_tag "new_virtual_group" %>
          <%= submit_tag "Add Class" %>

          <table class="table table-striped table-hover">
            <% unless @virtual_groups.empty? %>
            <thead>
              <th class="info">Class ID</th>
              <th/>
            </thead>
            <tbody>
              <% @virtual_groups.each do |classid| %>
              <tr>
                <td>
                  <%= label_tag do %>
                    <%= classid %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "×", 
                              polymorphic_path(object, delete_virtual_group: classid, step: @active_step, donot_advance: true),
                              method: :put, class: "close" %>
                </td>
              </tr>
              <% end %>
            </tbody>
            <% end %>
          </table>
        
        </div>
      </div>
    <% else %>
      Item is viewable by
      <% case access %>
      <% when "public" %>
        the general public
      <% when "restricted" %>
        logged in users only
      <% when "private" %>
        collection staff only
      <% end %>  
    <% end %>  
<% end %>
