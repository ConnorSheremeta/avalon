<div class="container-fluid grey">

  <div id="masthead" class="container">
    <div class="row visible-xs">
      <div class="lib-logo col-xs-8">
        <%= ualib_logo_link %>
      </div>
      <div class="col-xs-4 user-util">
          <%= render partial: "modules/user_util_dropdowns"%>
      </div>
    </div>
    <div class="row">
      <div class="lib-logo col-sm-4 hidden-xs">
        <%= ualib_logo_link %>
        <%= link_to "ERA Home", "https://era.library.ualberta.ca", :class => "era-link" %>
      </div>
        <div class="mast-branding col-sm-4">
          <h2 class="hidden-xs">education &amp; research archive</h2>
          <h1><a href="/">ERA</a></h1>
          <h3><span class="glyphicon glyphicon-triangle-right" aria-hidden="true"></span>AUDIO <span class="plus-head">&plus;</span> VIDEO</h3>
        </div>
        <div class="col-sm-4 user-util hidden-xs">
          <div class="row">
            <%= render partial: "modules/user_util_dropdowns"%>
          </div>
          <div class="row">
            <%= form_tag("/catalog", method: "get", id: "search-form-header", class: "form-inline hidden-xs mast-sm-search") do %>
              <%= hidden_field_tag :utf8, '✓', id: nil %>
              <%= hidden_field_tag :search_field, 'all_fields', id: nil %>
              <div class="form-group">
                <%= text_field_tag :q, "", id: "search-field-header", class: "form-control q", placeholder: "enter search terms" %>
                <%= submit_tag "Search ERA A&plus;V".html_safe, name: nil, class: "btn btn-default sm-search" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-xs-12 mobile-search visible-xs">
          <%= form_tag("/catalog", method: "get", id: "search-form-header-sm", class: "form-inline") do %>
            <%= hidden_field_tag :utf8, '✓', id: nil %>
            <%= hidden_field_tag :search_field, 'all_fields', id: nil %>
            <div class="col-xs-offset-1 col-xs-6">
              <%= text_field_tag :q, "", class: "form-control input-lg q query", placeholder: "enter search terms" %>
            </div>
            <div class="query-actions col-xs-5">
              <%= submit_tag "Search ERA A&plus;V".html_safe, name: nil, class: "call-to-action" %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-offset-2 col-xs-9 visible-xs">
          <%= link_to 'Browse ERA A&plus;V'.html_safe, catalog_index_path(search_field: 'all_fields', utf8: '✓', q: ''), :class => "call-to-action", :id => "browse-call" %>
        </div>
    </div>
  </div>
</div>
