<% # Write a helper method to handle this logic since it will be repeated
   # in other places %>
<% unless item.nil? %>
<dt>
  <% if can? :read, item %>
    <%= link_to catalog_path(item) do %> 
    <% unless item.title.blank? %><%= item.title %><% else %>No title provided<% end%> (<%= item.pid %>)
    <% end %>
  <% else %>
      <% unless item.title.blank? %><%= item.title %><% else %>No title provided<% end%> (<%= item.pid %>)
  <% end %>
</dt>
<dd class="whitespace">
  <!-- Need to shorten the abstract if it is too long -->
  <% if item.abstract.present? %>
    <%= truncate(item.abstract, length: 140) %>
  <% else %>
    <em>No summary available</em>
  <% end %>
</dd>
<% end %>
