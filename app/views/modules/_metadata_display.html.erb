<dl id="creation_metadata">
  <dt>Title</dt>
  <dd>
    <% unless @mediaobject.title.empty? or
      "" == @mediaobject.title.first %>
      <%= @mediaobject.title.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Creator</dt>
  <dd>
    <% unless @mediaobject.creator.empty? or
      "" == @mediaobject.creator.first %>
      <%= @mediaobject.creator.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <!-- <% unless @mediaobject.format.nil? %>
  <dt>Format</dt>
  <dd><%= @mediaobject.format.first %></dd>
  <% end %> -->

  <dt>Date</dt>
  <dd>
    <% unless @mediaobject.created_on.empty? %>
      <%= @mediaobject.created_on.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Summary</dt>
  <% unless @mediaobject.abstract.nil? or
       @mediaobject.abstract.empty? %>
    <dd><%= wrap_text(@mediaobject.abstract.first) %></dd>
  <% else %>
    <dd><em>No summary available</em></dd>
  <% end %>

  <% unless @mediaobject.contributor.nil? or
       @mediaobject.contributor.empty? %>
    <dt>Contributor(s)</dt>
    <dd><%= display_multiple(@mediaobject.contributor) %></dd>
  <% end %>

  <% unless @mediaobject.publisher.nil? or
       @mediaobject.publisher.empty? %>
    <dt>Publisher(s)</dt>
    <dd><%= display_multiple(@mediaobject.publisher) %></dd>
  <% end %>

  <% unless @mediaobject.genre.nil? or
       @mediaobject.genre.empty? or @mediaobject.genre.first.empty? %>
    <dt>Genre</dt>
    <dd><%= @mediaobject.genre.first %></dd>
  <% end %>

  <% unless @mediaobject.temporal.nil? or
       @mediaobject.temporal.empty? %>
    <dt>Key time periods</dt>
    <dd><%= display_multiple(@mediaobject.temporal) %></dd>
  <% end %>

  <% unless @mediaobject.spatial.nil? or
       @mediaobject.spatial.empty? %>
    <dt>Important locations</dt>
    <dd><%= display_multiple(@mediaobject.spatial) %></dd>
  <% end %>

  <% unless @mediaobject.subject.nil? or
       @mediaobject.subject.empty? %>
    <dt>Subject(s)</dt>
    <dd><%= display_multiple(@mediaobject.subject) %></dd>
  <% end %>
</dl>
