<dl id="creation_metadata">
  <dt>Title</dt>
  <dd>
    <% unless @mediaobject.title.blank? or
      "" == @mediaobject.title %>
      <%= sanitize @mediaobject.title %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Creator</dt>
  <dd>
    <% unless @mediaobject.creator.blank? %>
      <%= sanitize @mediaobject.creator %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Date</dt>
  <dd>
    <% unless @mediaobject.date_created.blank? %>
      <%= sanitize @mediaobject.date_created %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Summary</dt>
  <% unless @mediaobject.abstract.blank? %>
    <dd><%= sanitize @mediaobject.abstract %></dd>
  <% else %>
    <dd><em>No summary available</em></dd>
  <% end %>

  <% unless @mediaobject.contributor.blank? %>
    <dt>Contributor(s)</dt>
    <dd><%= display_multiple(@mediaobject.contributor) %></dd>
  <% end %>

  <% unless @mediaobject.publisher.blank? or
       @mediaobject.publisher.empty? %>
    <dt>Publisher(s)</dt>
    <dd><%= display_multiple(@mediaobject.publisher) %></dd>
  <% end %>

  <% unless @mediaobject.genre.blank? %>
    <dt>Genre</dt>
    <dd><%= sanitize @mediaobject.genre %></dd>
  <% end %>

  <% unless @mediaobject.temporal_subject.blank? %>
    <dt>Key time periods</dt>
    <dd><%= display_multiple(@mediaobject.temporal_subject) %></dd>
  <% end %>

  <% unless @mediaobject.geographic_subject.blank? %>
    <dt>Important locations</dt>
    <dd><%= display_multiple(@mediaobject.geographic_subject) %></dd>
  <% end %>

  <% unless @mediaobject.subject.blank? %>
    <dt>Subject(s)</dt>
    <dd><%= display_multiple(@mediaobject.subject) %></dd>
  <% end %>
</dl>
