<dl id="creation_metadata">
  <dt>Title</dt>
  <dd>
    <% unless @mediaobject.title.empty? or
      "" == @mediaobject.title.first %>
      <%= @mediaobject.title.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Creator</dt>
  <dd>
    <% unless @mediaobject.creator.empty? or
      "" == @mediaobject.creator.first %>
      <%= @mediaobject.creator.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <% unless @mediaobject.format.nil? %>
  <dt>Format</dt>
  <dd><%= @mediaobject.format.first %></dd>
  <% end %>

  <dt>Date</dt>
  <dd>
    <% unless @mediaobject.created_on.empty? %>
      <%= @mediaobject.created_on.first %>
    <% else %>
      <em>Not provided</em>
    <% end %>
  </dd>

  <dt>Summary</dt>
  <% unless @mediaobject.abstract.nil? or
       @mediaobject.abstract.empty? %>
    <dd><%= wrap_text(@mediaobject.abstract.first) %></dd>
  <% else %>
    <dd><em>No summary available</em></dd>
  <% end %>
</dl>
