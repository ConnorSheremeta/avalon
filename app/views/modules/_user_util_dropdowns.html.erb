<% if user_signed_in? %>
    <div class="btn-group user_utility_links">
      <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" href="#"><span class="hidden-xs">&nbsp;<%= user_key %>&nbsp;</span><span class="sr-only">select for additional menu options</span><span class="caret"></span></a>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li>
          <%= link_to  destroy_user_session_path do %>
            <span class="glyphicon glyphicon-log-out"></span>
            Log out
          <% end %>
        </li>
      </ul>
    </div><!-- /.btn-group -->
<% else %>
    <div class="btn-group login_button pull-right">
      <%= link_to(new_user_session_path, class: "btn btn-default btn-group", title: "Login") do %>
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
        Login
      <% end %>
    </div>
<% end %>
